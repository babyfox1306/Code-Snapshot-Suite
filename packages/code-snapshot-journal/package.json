{
  "name": "code-snapshot-journal",
  "displayName": "Code Snapshot Journal",
  "description": "Offline, lightweight, pragmatic snapshot tool for developers. Create, restore, and compare code snapshots with ease.",
  "version": "0.1.0",
  "publisher": "snapshot-suite",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Version Control"
  ],
  "keywords": [
    "snapshot",
    "backup",
    "version",
    "timeline",
    "code-history"
  ],
  "activationEvents": [
    "onCommand:codeSnapshotJournal.createSnapshot",
    "onView:snapshotTimeline"
  ],
  "main": "./out/main.js",
  "icon": "icon.png",
  "contributes": {
        "commands": [
      {
        "command": "codeSnapshotJournal.createSnapshot",
        "title": "Create Snapshot",
        "category": "Snapshot Journal"
      },
      {
        "command": "codeSnapshotJournal.restoreSnapshot",
        "title": "Restore Snapshot",
        "category": "Snapshot Journal"
      },
      {
        "command": "codeSnapshotJournal.deleteSnapshot",
        "title": "Delete Snapshot",
        "category": "Snapshot Journal"
      },
      {
        "command": "codeSnapshotJournal.compareSnapshot",
        "title": "Compare with Snapshot",
        "category": "Snapshot Journal"
      },
      {
        "command": "codeSnapshotJournal.refreshTimeline",
        "title": "Refresh Timeline",
        "category": "Snapshot Journal"
      },
      {
        "command": "codeSnapshotJournal.enterProKey",
        "title": "Enter Pro License Key",
        "category": "Snapshot Journal"
      },
      {
        "command": "codeSnapshotJournal.showTimelineChart",
        "title": "Show Timeline Chart",
        "category": "Snapshot Journal"
      },
      {
        "command": "codeSnapshotJournal.exportChangelog",
        "title": "Export Changelog",
        "category": "Snapshot Journal"
      },
      {
        "command": "codeSnapshotJournal.autoClean",
        "title": "Auto Clean Old Snapshots",
        "category": "Snapshot Journal"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "snapshotTimeline",
          "name": "Snapshot Timeline",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "codeSnapshotJournal.refreshTimeline",
          "when": "view == snapshotTimeline",
          "group": "navigation"
        },
        {
          "command": "codeSnapshotJournal.createSnapshot",
          "when": "view == snapshotTimeline",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "codeSnapshotJournal.restoreSnapshot",
          "when": "view == snapshotTimeline && viewItem == snapshotItem",
          "group": "inline"
        },
        {
          "command": "codeSnapshotJournal.compareSnapshot",
          "when": "view == snapshotTimeline && viewItem == snapshotItem",
          "group": "inline"
        },
        {
          "command": "codeSnapshotJournal.deleteSnapshot",
          "when": "view == snapshotTimeline && viewItem == snapshotItem",
          "group": "inline"
        }
      ]
    },
    "keybindings": [
      {
        "command": "codeSnapshotJournal.createSnapshot",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Code Snapshot Journal",
      "properties": {
        "codeSnapshotJournal.snapshotsPath": {
          "type": "string",
          "default": ".snapshots",
          "description": "Path where snapshots are stored relative to workspace root"
        },
        "codeSnapshotJournal.maxSnapshotSize": {
          "type": "number",
          "default": 100,
          "description": "Maximum snapshot size in MB before showing warning"
        },
        "codeSnapshotJournal.autoCleanDays": {
          "type": "number",
          "default": 30,
          "description": "Number of days after which snapshots are automatically cleaned (Pro feature)"
        },
        "codeSnapshotJournal.includePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "File patterns to include in snapshots (empty = include all)"
        },
        "codeSnapshotJournal.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules",
            ".git",
            ".vscode",
            "out",
            "dist",
            "*.log"
          ],
          "description": "File patterns to exclude from snapshots"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf out",
    "test": "echo 'No tests for extension package yet'",
    "lint": "eslint src --ext .ts",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "@snapshot/core": "file:../core",
    "@snapshot/icons": "file:../icons"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/node": "^20.0.0",
    "@types/jest": "^29.0.0",
    "@vscode/test-electron": "^2.3.0",
    "jest": "^29.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "vsce": "^2.15.0"
  },
  "files": [
    "out/**/*",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/snapshot-suite/code-snapshot-journal"
  },
  "bugs": {
    "url": "https://github.com/snapshot-suite/code-snapshot-journal/issues"
  },
  "homepage": "https://github.com/snapshot-suite/code-snapshot-journal#readme"
}
